	<!--  전체 게시글 수 조회  -->
	<select id="getListCount" resultType="_int">
		SELECT COUNT(*) FROM V_BOARD
		WHERE BOARD_STATUS = 'N'
		AND BOARD_CD = '2'
	</select>
	
	<!-- 게시글 목록 조회  -->
	<select id="selcetList" parameterType="_int" resultMap="review_rm">
		SELECT BOARD_TITLE, READ_COUNT, CATEGORY_NM, NICKNAME
		FROM V_BOARD
		WHERE STATUS = 'N'
		AND BOARD_CD = 2 
    ORDER BY BOARD_NO DESC;
	</select>

   

</mapper>